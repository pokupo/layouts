/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$select_arrow_bottom_name = 'select-arrow_bottom';
$select_arrow_bottom_x = 0px;
$select_arrow_bottom_y = 0px;
$select_arrow_bottom_offset_x = 0px;
$select_arrow_bottom_offset_y = 0px;
$select_arrow_bottom_width = 16px;
$select_arrow_bottom_height = 10px;
$select_arrow_bottom_total_width = 40px;
$select_arrow_bottom_total_height = 10px;
$select_arrow_bottom_image = '../images/sprite.png';
$select_arrow_bottom = 0px 0px 0px 0px 16px 10px 40px 10px '../images/sprite.png' 'select-arrow_bottom';
$select_arrow_top_name = 'select-arrow_top';
$select_arrow_top_x = 24px;
$select_arrow_top_y = 0px;
$select_arrow_top_offset_x = -24px;
$select_arrow_top_offset_y = 0px;
$select_arrow_top_width = 16px;
$select_arrow_top_height = 10px;
$select_arrow_top_total_width = 40px;
$select_arrow_top_total_height = 10px;
$select_arrow_top_image = '../images/sprite.png';
$select_arrow_top = 24px 0px -24px 0px 16px 10px 40px 10px '../images/sprite.png' 'select-arrow_top';
$spritesheet_width = 40px;
$spritesheet_height = 10px;
$spritesheet_image = '../images/sprite.png';
$spritesheet_sprites = $select_arrow_bottom $select_arrow_top;
$spritesheet = 40px 10px '../images/sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
