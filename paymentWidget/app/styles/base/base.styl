.pkp_html .pkp_body
    #pkp-container {
        max-width: 800px;
        min-width: 480px;
        margin: 0 auto;
        font-weight: normal;
        padding: 29px 40px;
        box-sizing: border-box;
        background: #fff;
        overflow: hidden
    }
    #pkp-container textarea {
        width: 100%;
        height: 50px;
        padding: 10px 19px;
        border-radius: 3px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        resize: vertical;
        margin-top: 8px;
        font: 18px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
    }
    #pkp-container input:focus {
        outline: none;
        border: 2px solid #177a93;
    }
.pkp_html .pkp_body #pkp-container
    .pkp-clearfix:after {
        content: '';
        display: block;
        clear: both;
    }
    .pkp-payment-order {
        width: 360px;
        float: left;
    }
    .pkp-footer {
        text-align: right;
    }
    .pkp-footer a {
        color: #177a93;
    }
    .pkp-footer a:hover {
        text-decoration: none;
    }
    .pkp-label-checkbox {
        display: block;
        clear: both;
        float: left;
        margin-top: 14px;
    }
    .pkp-input-checkbox {
        position: absolute; 
        overflow: hidden; 
        clip: rect(0 0 0 0); 
        height:1px; 
        width:1px; 
        margin:-1px; 
        padding:0;
        border:0;
    }
    .pkp-input-checkbox:checked + .pkp-span-checkbox {
        background-image: url('data:image/png;base64,');
        background-position: 0 -1px;
    }
    .pkp-span-checkbox{
        padding-left: 34px;
        display: inline-block;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        line-height: 24px;
        background-repeat: no-repeat;
        background-position: 0 0;
        vertical-align: middle;
        cursor: pointer;
        background-image: url('data:image/png;base64,');
    }

    .pkp-label-radio {
        display: block;
        clear: both;
        float: left;
        margin-top: 14px;
    }
    .pkp-input-radio {
        position: absolute; 
        overflow: hidden; 
        clip: rect(0 0 0 0); 
        height:1px; 
        width:1px; 
        margin:-1px; 
        padding:0;
        border:0;
    }
    .pkp-input-radio:checked + .pkp-span-radio {
        background-image: url('data:image/png;base64,');
    }
    .pkp-span-radio{
        padding-left: 34px;
        display: inline-block;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        line-height: 24px;
        background-repeat: no-repeat;
        background-position: 0 0;
        vertical-align: middle;
        cursor: pointer;
        background-image: url('data:image/png;base64,');
    }

    .pkp-form {
        margin-bottom: 0;
    }
    .pkp-form__label {
        margin-bottom: 30px;
        display: inline-block;
        position: relative;
    }
    .pkp-error-msg {
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        color: #fd5656;
        position: absolute;
        right: 0px;
        top: 2px;
        display: none;
    }
    .pkp-input {
        width: 351px;
        border: 1px solid #ccc;
        border-radius: 3px;
        height: 50px;
        padding: 0 19px;
        margin-top: 8px;
        font: 18px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        letter-spacing: 0.5px;
    }
    .pkp-input_error {
        border: 2px solid #fd5656
    }

    .pkp-payment-method {
        margin: 19px 0 10px 0;
        padding: 0 2px;
        text-align: justify;
    }
    .pkp-payment-method:after {
        content: '';
        width: 100%;
        display: inline-block;
    }
    .pkp-payment-method__item {
        background: #fff;
        border-width: 2px;
        border-style: solid;
        border-color: #efece7;
        border-radius: 8px;
        display: inline-block;
        width: 225px;
        position: relative;
        padding-top: 39px;
        margin-bottom: 20px;
        vertical-align: top;
        height: 266px;
    }
    .pkp-payment-method__item_small {
        height: 220px;
        float: right;
    }
    .pkp-payment-method__item:not(.pkp-payment-method__item_disabled):hover {
        border-color: #66cc66;
    }
    .pkp-payment-method__item_disabled {
        pointer-events: none;
    }
    .pkp-payment-method__item_disabled .pkp-payment-method__content{
        opacity: .5;
    }
    .pkp-payment-method__content{
        text-align: center;
    }
    .pkp-payment-method__image {
        display: block;
        margin: 0 auto 35px;
    }
    .pkp-payment-method__pay {
        height: 50px;
        text-decoration: none;
        color: #000;
        font: 16px 'Open Sans', Arial, sans-serif;
        font-weight: 300;
        background: #66cc66;
        line-height: 50px;
        text-align: center;
        margin-top: 20px;
        position: absolute;
        width: calc(100% + 2px);
        padding: 0 1px;
        box-sizing: content-box;
        bottom: -2px;
        left: -2px;
        border-radius: 0 0 8px 8px;
        border: none;
        cursor: pointer;
    }
    .pkp-payment-method__pay:focus {
        outline: none;
    }
    .pkp-payment-method__pay:active {
        background: #478e47;
    }
    .pkp-payment-method__item_disabled .pkp-payment-method__pay {
        background: #efece7;
        bottom: 0;
        left: 0;
        padding: 0;
    }

    .pkp-tooltip-payment-method {
        position: absolute;
        right: 8px;
        top: 8px;
    }
    .pkp-tooltip-receipt {
        display: inline-block;
    }
    .pkp-tooltip {
        position: relative;
        width: 20px;
    }
    .pkp-tooltip_inline {
        display: inline-block;
    }
    .pkp-tooltip__trigger {
        width: 18px;
        height: 18px;
        border: 1px solid #66cc66;
        display: inline-block;
        border-radius: 999px;
        color: #66cc66;
        font: 10px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
        text-align: center;
        line-height: 18px;
        cursor: pointer;
    }
    .pkp-tooltip:hover .pkp-tooltip__trigger {
        color: #fff;
        background: #66cc66;
    }
    .pkp-tooltip__content {
        pointer-events: none;
        position: absolute;
        width: 495px;
        padding: 20px 20px;
        background: #fff;
        box-shadow: 0 2px 8px 0 rgba(0,0,0,.5);
        top: 28px;
        right: -21px;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        opacity: 0;
        -webkit-transform: translate(35px) rotate(25deg) scale(1.5);
        -moz-transform: translate(35px) rotate(25deg) scale(1.5);
        -o-transform: translate(35px) rotate(25deg) scale(1.5);
        -ms-transform: translate(35px) rotate(25deg) scale(1.5);
        transform: translate(35px) rotate(25deg) scale(1.5);
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
        z-index: 99;
        text-align: left;
    }
    .pkp-tooltip__content:after {
        content: '';
        width: 20px;
        height: 12px;
        background-repeat: no-repeat;
        background-image: url('data:image/png;base64,');
        position: absolute;
        top: -12px;
        right: 21px;
    }
    .pkp-tooltip__content_left {
        left: -21px;
    }
    .pkp-tooltip__content_left:after {
        left: 21px;
    }
    .pkp-tooltip__content_center_comments {
        width: 460px;
        right: -300px;
    }
    .pkp-tooltip__content_center_comments:after {
        right: 300px;
    }
    .pkp-tooltip:hover .pkp-tooltip__content {
        opacity: 1;
        -webkit-transform: translate(0px) rotate(0deg) scale(1);
        -moz-transform: translate(0px) rotate(0deg) scale(1);
        -o-transform: translate(0px) rotate(0deg) scale(1);
        -ms-transform: translate(0px) rotate(0deg) scale(1);
        transform: translate(0px) rotate(0deg) scale(1);
        pointer-events: auto;
        transition: all 0.3s ease-in-out;
    }
    .pkp-tooltip__title {
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
        margin: 0 0 20px 0;
    }
    .pkp-tooltip__content a {
        color: #177a93;
        text-decoration: none;
    }
    .pkp-tooltip__content a:hover {
        text-decoration: underline;
    }
    .pkp-tooltip__content p {
        margin: 5px 0 0 0;
    }

    .pkp-resize-block-wrapper {
       resize: vertical ; 
       overflow auto;
       height: 500px;
       margin-top: 15px;
       padding-bottom: 10px;
       border: 2px solid #efece7;
    }
    .pkp-resize-block {
        padding: 36px 27px 0 27px;
        
    }
    .pkp-contributors-intruct {
        padding-top: 4px;
    }
    .pkp-contributors-intruct__list {
        padding: 0;
        list-style: none;
        margin: 0;
    }
    .pkp-contributors-intruct__list-item {
        margin-bottom: 27px;
    }
    .pkp-contributors-intruct__list-item h5 {
        display: block;
        font: 18px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
        line-height: 20px;
        text-transform: uppercase;
        margin: 0 0 13px 0;
    }
    .pkp-contributors-intruct__list-item h6{
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
        display: block;
        margin: 0 0 2px 0;
    }
    .pkp-contributors-intruct__list-item strong {
        display: inline-block;
        margin-top: 20px;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
    }
    .pkp-contributors-intruct__list-item span {
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        letter-spacing: .3px;
    }
    .pkp-contributors-intruct__list-item img {
        margin: 14px 0 0 0;
        width: 100%;
    }
    .pkp-contributors-intruct__list-item p {
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        margin: 0;
        line-height: 20px;
        letter-spacing: 0.3px;
    }

    .pkp-rollup__content_hidden {
        display: none;
    }
    .pkp-rollup__trigger {
        color: #177a93;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 700;
        text-decoration: none;
        border-bottom: 1px dotted #177a93;
        position: relative;
        margin-right: 26px;
        top: -3px;
        letter-spacing: 0.4px;
    }
    .pkp-rollup__trigger:hover {
        border-bottom: none;
    }
    .pkp-rollup__trigger:after {
        content: '';
        display: inline-block;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 5px 6px 5px;
        border-color: transparent transparent #177a93 transparent;
        position: absolute;
        right: -14px;
        bottom: 4px;
    }
    .pkp-rollup__trigger_closed:after {
        border-width: 6px 5px 0 5px;
        border-color: #177a93 transparent transparent transparent;
    }

    .pkp-receipt-form {
        margin-top: 36px;
    }
    .pkp-receipt-form__row {
        display: block;
        margin-bottom: 3px;
        text-align: justify;
    }
    .pkp-receipt-form__row:after {
        content: '';
        display: inline-block;
        width: 100%;
    }
    .pkp-receipt-form__grid_50 {
        display: inline-block;
