        text-indent: 2px;
        display: block;
        margin-bottom: 21px;
    }
    .pkp-print {
        color: #666;
        font: 13px 'Open Sans', Arial, sans-serif;
        font-weight: 400;
        text-decoration: underline;
        line-height: 16px;
    }
    .pkp-print:hover {
        text-decoration: none;
    }
    .pkp-print:before {
        content: '';
        width: 16px;
        height: 16px;
        background-repeat: no-repeat;
        background-image: url('data:image/png;base64,');
        display: inline-block;
        margin-right: 4px;
        background-position: 0 2px;
    }
    .pkp-title .pkp-print {
        float: right;
