.pkp_html .pkp_body #pkp-container
    .pkp-btn {
        border-radius: 999px;
        font: 16px 'OpenSans-Light', Arial, sans-serif;
        text-decoration: none;
        cursor: pointer;
    }
    .pkp-btn_back {
        background: #fff;
        border: 1px solid #efece7;
        padding: 13px 46px;
        margin: 0 6px 18px 0;
        display: inline-block;
    }
    .pkp-btn_back:hover {
        background: #efece7;
    }
    .pkp-btn_back:active {
        background: #cbc9c5;
        color: #000;
    }
    .pkp-btn_back:before {
        content: '';
        display: inline-block;
        width: 16px;
        height: 11px;
        margin-right: 8px;
        background-image: url('data:image/png;base64,');
    }
    .pkp-btn_get-receipt {
        background: #66cc66;
        border: none;
        padding: 14px 64px;
    }
    .pkp-btn_get-receipt:hover {
        background: #57ae57;
    }
    .pkp-btn_get-receipt:focus {
        outline: none;
    }
    .pkp-btn_get-receipt:active {
        background: #478e47;
    }
    .pkp-btn_upload {
        background: #66cc66;
        padding: 10px;
        color: #000000;
        padding: 13px 28px;
        display: inline-block;
    }
    .pkp-btn_upload:hover {
        background: #57ae57;
    }
    .pkp-btn_upload:active {
        background: #478e47;
    }
    .pkp-btn_upload:before {
        content: '';
        width: 16px;
        height: 15px;
        margin-right: 4px;
        display: inline-block;
        background-image: url('data:image/png;base64,');
    }
    .pkp-btn_another-payment {
        background: #fff;
        border: 1px solid #efece7;
        padding: 13px 0;
        width: 330px;
        text-align: center;
        display: block;
        color: #000000;
        margin: 35px 0 40px 0;
    }
    .pkp-btn_another-payment:hover {
        background: #efece7;
    }
    .pkp-btn_another-payment:active {
        background: #cbc9c5;
        color: #000;
    }